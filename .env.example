# KuCoin API Configuration
KUCOIN_API_KEY=your_api_key_here
KUCOIN_API_SECRET=your_api_secret_here
KUCOIN_API_PASSPHRASE=your_api_passphrase_here

# Bot Configuration (OPTIONAL - will be auto-configured based on your balance)
# Uncomment and set these values ONLY if you want to override the smart defaults
# LEVERAGE=10
# MAX_POSITION_SIZE=1000
# RISK_PER_TRADE=0.02
# MIN_PROFIT_THRESHOLD=0.005

# Trading Parameters
CHECK_INTERVAL=60
TRAILING_STOP_PERCENTAGE=0.02
MAX_OPEN_POSITIONS=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Machine Learning
RETRAIN_INTERVAL=86400
ML_MODEL_PATH=models/signal_model.pkl

# Performance Optimization (OPTIONAL - defaults work well for most cases)
# MARKET_SCAN_CACHE_DURATION=300      # Cache market scans for 5 minutes
# ML_PREDICTION_CACHE_DURATION=300    # Cache ML predictions for 5 minutes
# MAX_PARALLEL_WORKERS=10             # Number of parallel threads for market scanning
# ENABLE_PERFORMANCE_MONITORING=true  # Enable performance reports every 10 cycles

