[flake8]
# Flake8 configuration for RAD Trading Bot
# This ensures code quality and consistent style

# Maximum line length
max-line-length = 120

# Ignore specific error codes
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with PEP 8 update)
    W503,
    # E501: line too long (we set max-line-length instead)
    # E402: module level import not at top (sometimes needed for dynamic imports)
    E402,

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    logs,
    models,
    .github,

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401

# Show source code for errors
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
