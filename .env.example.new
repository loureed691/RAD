# RAD Trading Bot Configuration
# Generated configuration template with validation rules
# Copy this file to .env and fill in your values

# API Configuration
#===================
# KuCoin API Key
# [REQUIRED]
KUCOIN_API_KEY=your_kucoin_api_key_here

# KuCoin API Secret
# [REQUIRED]
KUCOIN_API_SECRET=your_kucoin_api_secret_here

# KuCoin API Passphrase
# [REQUIRED]
KUCOIN_API_PASSPHRASE=your_kucoin_api_passphrase_here

# WebSocket
#===========
# Enable WebSocket for real-time data
# [default: True]
# ENABLE_WEBSOCKET=True

# Trading Parameters
#====================
# Trading leverage - When set, this EXACT value is used for ALL trades
# WARNING: Setting a fixed leverage bypasses the bot's dynamic safety adjustments
# based on market volatility and conditions. Only set this if you understand the risks.
# If not set, leverage is dynamically calculated (4-12x based on balance and market conditions)
# [min: 1, max: 20]
# LEVERAGE=

# Maximum position size in USDT
# [min: 10.0, max: 1000000.0]
# MAX_POSITION_SIZE=

# Risk per trade as decimal (e.g., 0.02 = 2%)
# [min: 0.001, max: 0.1]
# RISK_PER_TRADE=

# Minimum profit threshold to enter trade
# [min: 0.0001, max: 0.5]
# MIN_PROFIT_THRESHOLD=

# Bot Timing
#============
# Market scanning interval in seconds
# [min: 10, max: 3600, default: 60]
# CHECK_INTERVAL=60

# Position update interval in seconds
# [min: 0.5, max: 60.0, default: 1.0]
# POSITION_UPDATE_INTERVAL=1.0

# Main loop sleep interval in seconds
# [min: 0.01, max: 10.0, default: 0.05]
# LIVE_LOOP_INTERVAL=0.05

# Trailing stop percentage
# [min: 0.005, max: 0.2, default: 0.02]
# TRAILING_STOP_PERCENTAGE=0.02

# Maximum concurrent positions
# [min: 1, max: 20, default: 3]
# MAX_OPEN_POSITIONS=3

# Number of parallel workers for scanning
# [min: 1, max: 50, default: 8]
# MAX_WORKERS=8

# Cache duration in seconds
# [min: 60, max: 3600, default: 300]
# CACHE_DURATION=300

# Multiplier for max age of opportunity data
# [min: 1, max: 10, default: 2]
# STALE_DATA_MULTIPLIER=2

# Logging
#=========
# Main log level
# [default: INFO]
# LOG_LEVEL=INFO

# Main log file path
# [default: logs/bot.log]
# LOG_FILE=logs/bot.log

# Detailed log level for specialized loggers
# [default: DEBUG]
# DETAILED_LOG_LEVEL=DEBUG

# Machine Learning
#==================
# ML model retrain interval in seconds
# [min: 3600, max: 604800, default: 86400]
# RETRAIN_INTERVAL=86400

# ML model file path
# [default: models/signal_model.pkl]
# ML_MODEL_PATH=models/signal_model.pkl

# Reproducibility
#=================
# Random seed for reproducibility
# [min: 0, max: 999999, default: 42]
# RANDOM_SEED=42

